{
    "name": "per-seo/locale",
    "type": "library",
    "description": "Language in URI for Slim 4. This Middleware add an attribute 'locale' to the request object, to help with page translation for SEO.",
    "keywords": [
        "locale",
        "slim",
        "slim4"
    ],
    "homepage": "https://github.com/per-seo/locale",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "psr/http-server-middleware": "^1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=2",
        "overtrue/phplint": "^2",
        "phpstan/phpstan": ">=1",
        "phpunit/phpunit": "^11.4",
        "slim/psr7": "^1",
        "slim/slim": "^4",
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs:check",
            "@sniffer:check",
            "@phpstan",
            "@test:coverage"
        ],
        "cs:check": "php-cs-fixer fix --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.cs.php",
        "cs:fix": "php-cs-fixer fix --config=.cs.php",
        "lint": "phplint ./ --exclude=vendor --no-interaction --no-cache",
        "phpstan": "phpstan analyse src tests --level=max -c phpstan.neon --no-progress --ansi",
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "sniffer:fix": "phpcbf --standard=phpcs.xml",
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always",
        "test:coverage": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    },
    "autoload": {
        "psr-4": {
            "PerSeo\\Middleware\\Locale\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PerSeo\\Middleware\\Locale\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    }
}
